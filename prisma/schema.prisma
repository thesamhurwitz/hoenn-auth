generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  role     Role   @default(USER)
  hash     String

  profile Profile?

  sessions Session[]

  passwordChangedAt DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  @@index([username])
}

model Session {
  id  Int    @id @default(autoincrement())
  key String @unique

  user   User @relation(fields: [userId], references: [id])
  userId Int

  ip       String?
  device   Json?
  location Json?

  firstAccess DateTime @default(now())
  lastAccess  DateTime @updatedAt // TODO: remove updateAt, update when accessed

  @@index([key])
}

model Profile {
  id Int @id @default(autoincrement())

  bio      String
  picture  String?
  birthday DateTime?
  gender   String?
  emails   String[]
  phone    String


  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}

enum Role {
  USER
  ADMIN
}
